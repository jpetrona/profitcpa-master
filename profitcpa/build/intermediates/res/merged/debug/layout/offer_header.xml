<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.profits.cpa.ResizableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/promo1"></com.profits.cpa.ResizableImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.profits.cpa.ResizableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/promo2"></com.profits.cpa.ResizableImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.profits.cpa.ResizableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/promo3"></com.profits.cpa.ResizableImageView>


        </LinearLayout>
    </ViewFlipper>

    <LinearLayout
        android:id="@+id/OffersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/offertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Offers"
                android:textColor="@color/textwhite"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
